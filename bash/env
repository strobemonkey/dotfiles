# values used by other scripts and applications

# don't put duplicate lines in the history. See bash(1) for more options
export HISTCONTROL=ignoredups
# ... and ignore same sucessive entries.
export HISTCONTROL=ignoreboth

export PATH=/usr/local/git/bin:$PATH

# include my stuff first
#export PATH=$PATH:~/bin

# Postgres stuff
export PATH=$PATH:/opt/local/lib/postgresql84/bin
export PATH=$PATH:/opt/local/var/macports/software/postgresql84/8.4.1_0/opt/local/lib/postgresql84/bin
export ARCHFLAGS='-arch i386'

export MANPATH=/usr/local/git/man:$MANPATH

# EC2
export JAVA_HOME=/Library/Java/Home
export EC2_HOME=~/Documents/workspace/ec2-api-tools-1.3-19403
export PATH=$PATH:$EC2_HOME/bin
export EC2_PRIVATE_KEY="$(/bin/ls $HOME/.ec2/pk-*.pem)"
export EC2_CERT="$(/bin/ls $HOME/.ec2/cert-*.pem)"

# MacPorts
export PATH=/opt/local/bin:/opt/local/sbin:$PATH

export SVN_EDITOR='mate -w'
export EDITOR='mate -w'

# mongodb stuff
export PATH=$PATH:/usr/local/mongodb/bin

# Android stuff
export PATH=$PATH:~/Documents/workspace/android-sdk-mac_86/tools

# RVM
if [[ -s ~/.rvm/scripts/rvm ]] ; then source ~/.rvm/scripts/rvm ; fi
